{
    "name": "madbox-99/laravel-user-team-sync",
    "description": "User and team synchronization between a subscriber hub and secondary Laravel apps",
    "type": "library",
    "keywords": [
        "laravel",
        "sync",
        "user",
        "team",
        "microservice",
        "webhook"
    ],
    "require": {
        "php": "^8.3",
        "laravel/framework": "^11.0 || ^12.0"
    },
    "require-dev": {
        "orchestra/testbench": "^9.0 || ^10.0",
        "pestphp/pest": "^3.0 || ^4.0",
        "laravel/pint": "^1.0"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Zoltán Tamás Szabó",
            "email": "zoli.szabok@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Madbox99\\UserTeamSync\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Madbox99\\UserTeamSync\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Madbox99\\UserTeamSync\\UserTeamSyncServiceProvider"
            ],
            "aliases": {
                "UserTeamSync": "Madbox99\\UserTeamSync\\Facades\\UserTeamSync"
            }
        }
    },
    "scripts": {
        "test": "pest",
        "lint": "pint"
    },
    "minimum-stability": "stable",
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}